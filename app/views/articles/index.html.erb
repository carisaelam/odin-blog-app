<h1>Welcome to the Blog!!</h1>

<ul class="welcome__article__container">
  <h3>Articles:</h3>
    <% @articles.each do |article| %>
      <li class="welcome__article__title__line">
        <%= link_to article.title, article %>
        <%= link_to article_path(article), data: {
          turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: "delete-link" do %>
          <i class="fa-regular fa-trash-can" id="trash-can"></i>
        <% end %>
      </li>
    <% end %>
</ul>

<button class='button'>
<%= link_to "New Article", new_article_path %>

</button>

